<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rosa_claro"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bIngredientes"
                android:layout_width="174dp"
                android:layout_height="148dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/black"
                android:text="@string/ingredientes_low"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/bListaCompra"
                android:layout_width="174dp"
                android:layout_height="148dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/black"
                android:text="@string/lista_de_la_compra_low"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bDespensa"
                android:layout_width="174dp"
                android:layout_height="148dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/black"
                android:text="@string/despensa_low"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/bRecetas"
                android:layout_width="174dp"
                android:layout_height="148dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/black"
                android:text="@string/recetas_low"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bPlanificador"
                android:layout_width="174dp"
                android:layout_height="148dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/black"
                android:text="@string/planificador_low"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/bMenu"
                android:layout_width="174dp"
                android:layout_height="148dp"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:backgroundTint="@color/black"
                android:text="@string/menu_low"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>